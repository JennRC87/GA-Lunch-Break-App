        <h1>GA Students Recommendations</h1>

        <!-- Locations Table -->
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
              <th>Address</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <!-- Locations table, grabbing data from Places -->
          <tbody>
          <% @places.each do |place| %>
            <tr>
              <td><%= place.name %></td>
              <th colspan="3"></th>
              <td><%= place.address %></td>
              <th colspan="3"></th>
              <td><%= link_to 'Details', place %></td>
              <td><%= link_to 'Edit', edit_place_path(place) %></td>
              <td><%= link_to 'Delete', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
          </tbody>
        </table>

        <br>
