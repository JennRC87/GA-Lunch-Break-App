<script src="//maps.google.com/maps/api/js?key=AIzaSyBAchzUgA7nscKvpxt3v_YoC1pn5_55GcM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

 <body>
 <%= render 'layouts/header' %>
   <input id="pac-input" class="controls" type="text"
       placeholder="Enter a location">


   <div id="map"></div>
<!--     <div id="current">Nothing yet...</div>
   <div id="lat">Nothing yet...</div>
   <div id="long">Nothing yet...</div> -->
<!-- -->

<p id="notice"><%= notice %></p>

<br>

<h1>GA Students Recommendations</h1>

<table>
 <thead>
   <tr>
     <th>Name</th>
     <th colspan="3"></th>
     <th>Address</th>
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @places.each do |place| %>
     <tr>
       <td><%= place.name %></td>
       <th colspan="3"></th>
       <td><%= place.address %></td>
       <th colspan="3"></th>
       <td><%= link_to 'Details', place %></td>
       <td><%= link_to 'Edit', edit_place_path(place) %></td>
       <td><%= link_to 'Delete', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </tr>
   <% end %>
 </tbody>
</table>

<br>
<%= link_to 'New Place', new_place_path %>

<%= form_for :place, method: 'create', url: {action: "create"} do |f| %>
<%= label(:place, :name) %><br>
<%= f.text_field :name %><br>
<%= label(:place, :address) %><br>
<%= f.text_field :address %><br>
<%= label(:place, :latitude) %><br>
<%= f.text_field :latitude %><br>
<%= label(:place, :longitude) %><br>
<%= f.text_field :longitude %><br>
<br>
<%= f.submit "Save This Place" %>
<% end %>

<div >
 <div id="map_with_markers" style='width: 100%; height: 400px;'></div>
</div>




<%= render 'layouts/footer' %>
   <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBAchzUgA7nscKvpxt3v_YoC1pn5_55GcM&libraries=places&callback=initMap" async defer></script>

<script type="text/javascript" >
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map_with_markers'}}, function(){
 markers = handler.addMarkers(<%=raw @hash.to_json %>);
 handler.bounds.extendWith(markers);
 handler.fitMapToBounds();
});
</script>
 </body>
