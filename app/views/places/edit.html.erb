<%= render 'layouts/header' %>
<div class="edit-place">
  <h2>Editing Places</h2>

  <%= form_for @place do |c| %>

  <%= c.label :name %><br>
  <%= c.text_field :name %><br>

  <%= c.label :address %><br>
  <%= c.text_field :address %><br>

  <%= c.label :latitude %><br>
  <%= c.text_field :latitude %><br>

  <%= c.label :longitude %><br>
  <%= c.text_field :longitude %><br>

  <% hidden_field(:place, :id) %>
    <%= c.submit "Update", class: "btn waves-effect waves-light red accent-4 edit-btn"%>
  <% end %>
</div>

<%= render 'layouts/footer' %>
